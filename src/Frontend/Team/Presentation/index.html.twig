{% extends '@frontend/Theme/Presentation/base.html.twig' %}

{% block title %}Hello TeamController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% if teamCollectionTransfer.teams|length == 0 %}
            <p>No teams found.</p>
        {% endif %}

        {% for teamTransfer in teamCollectionTransfer.teams %}
            <p>{{ teamTransfer.name }}</p>
        {% endfor %}
    </div>
{% endblock %}
